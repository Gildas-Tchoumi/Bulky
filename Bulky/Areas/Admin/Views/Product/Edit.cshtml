@model Product

<div class="card shadow border-0 my-5">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">
                    Edit Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form action="Edit" method="post" class="row">
            <div class="border p-3">
                <input type="number" asp-for="Id" hidden />
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control shadow border-0" />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="ISBN" class="form-control shadow border-0" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="Author" class="form-control shadow border-0" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="ListPrice" class="form-control shadow border-0" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="Price" class="form-control shadow border-0" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="Price50" class="form-control shadow border-0" />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    <input asp-for="Price100" class="form-control shadow border-0" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    @* <label class="p-0">Display Order</label> *@
                    @* <input asp-for="Description" class="form-control shadow border-0" /> *@
                    <textarea asp-for="Description" class="form-control shadow border-0"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to list</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@* validation frontend avec le fichier partiel de javascripts *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
